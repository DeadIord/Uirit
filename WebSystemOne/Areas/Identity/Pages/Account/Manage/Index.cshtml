@page
@model WebSystemOne.Areas.Identity.Pages.Account.Manage.IndexModel
@{
    ViewData["Title"] = "Профиль";
    ViewData["ActivePage"] = "Index";
}

<!-- Страница профиля пользователя -->
<div class="container py-5">

        <!-- Основное содержимое -->
        <div class="col-md-9">
            <div class="auth-card fade-in-up">
                <div class="auth-header">
                    <h4 class="auth-title">Личный профиль</h4>
                    <p class="auth-subtitle">Управление персональной информацией</p>
                </div>
                <div class="auth-body">
                    <partial name="_StatusMessage" for="StatusMessage" />
                    <form id="profile-form" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                        <!-- Имя пользователя (не редактируется) -->
                        <div class="form-floating">
                            <input asp-for="Username" class="form-control" placeholder="Имя пользователя" disabled />
                            <label asp-for="Username" class="form-label">Имя пользователя</label>
                        </div>

                        <!-- Редактируемые поля ФИО -->
                        <div class="form-floating">
                            <input asp-for="Input.FirstName" class="form-control" placeholder="Введите имя" />
                            <label asp-for="Input.FirstName" class="form-label">Имя</label>
                            <span asp-validation-for="Input.FirstName" class="text-danger validation-error"></span>
                        </div>

                        <div class="form-floating">
                            <input asp-for="Input.LastName" class="form-control" placeholder="Введите фамилию" />
                            <label asp-for="Input.LastName" class="form-label">Фамилия</label>
                            <span asp-validation-for="Input.LastName" class="text-danger validation-error"></span>
                        </div>

                        <div class="form-floating">
                            <input asp-for="Input.MiddleName" class="form-control" placeholder="Введите отчество" />
                            <label asp-for="Input.MiddleName" class="form-label">Отчество</label>
                            <span asp-validation-for="Input.MiddleName" class="text-danger validation-error"></span>
                        </div>

                        <button id="update-profile-button" type="submit" class="w-100 btn btn-auth btn-primary-gradient btn-lg">
                            <i class="bi bi-check-circle btn-icon"></i> Сохранить изменения
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/auth-script.js"></script>
}