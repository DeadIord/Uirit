@page
@model LoginModel
@{
    ViewData["Title"] = "Вход";
}

<!-- Страница входа -->
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="auth-card fade-in-up">
                <div class="auth-header">
                    <div class="auth-icon">
                        <i class="bi bi-shield-lock"></i>
                    </div>
                    <h4 class="auth-title">Вход в систему</h4>
                    <p class="auth-subtitle">Добро пожаловать! Авторизуйтесь, чтобы продолжить</p>
                </div>
                <div class="auth-body">
                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                        <div class="form-floating">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email" class="form-label">Электронная почта</label>
                            <span asp-validation-for="Input.Email" class="text-danger validation-error"></span>
                        </div>

                        <div class="form-floating">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="пароль" />
                            <label asp-for="Input.Password" class="form-label">Пароль</label>
                            <span asp-validation-for="Input.Password" class="text-danger validation-error"></span>
                        </div>

                        <div class="custom-checkbox">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            <label class="form-check-label" asp-for="Input.RememberMe">
                                Запомнить меня
                            </label>
                        </div>
                        <input type="hidden" name="ReturnUrl" value="@Url.Content("~/")" />
                        <button id="login-submit" type="submit" class="w-100 btn btn-auth btn-primary-gradient btn-lg">
                            <i class="bi bi-box-arrow-in-right btn-icon"></i> Войти в систему
                        </button>

                        <div class="text-center mt-4">
                            <p class="mb-0">
                                Нет учетной записи?
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="auth-link">
                                    Зарегистрироваться
                                </a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/auth-script.js"></script>
}