@page
@model RegisterModel
@{
    ViewData["Title"] = "Регистрация";
}

<!-- Страница регистрации -->
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="auth-card fade-in-up">
                <div class="auth-header">
                    <div class="auth-icon">
                        <i class="bi bi-person-plus"></i>
                    </div>
                    <h4 class="auth-title">Создание аккаунта</h4>
                    <p class="auth-subtitle">Заполните форму для регистрации новой учетной записи</p>
                </div>
                <div class="auth-body">
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

                        <div class="form-floating">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                            <label asp-for="Input.Email">Электронная почта</label>
                            <span asp-validation-for="Input.Email" class="text-danger validation-error"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Input.LastName" class="form-control" aria-required="true" placeholder="Иванов" />
                                    <label asp-for="Input.LastName">Фамилия</label>
                                    <span asp-validation-for="Input.LastName" class="text-danger validation-error"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="Input.FirstName" class="form-control" aria-required="true" placeholder="Иван" />
                                    <label asp-for="Input.FirstName">Имя</label>
                                    <span asp-validation-for="Input.FirstName" class="text-danger validation-error"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-floating">
                            <input asp-for="Input.MiddleName" class="form-control" aria-required="true" placeholder="Иванович" />
                            <label asp-for="Input.MiddleName">Отчество</label>
                            <span asp-validation-for="Input.MiddleName" class="text-danger validation-error"></span>
                        </div>

                        <div class="form-floating">
                            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="пароль" />
                            <label asp-for="Input.Password">Пароль</label>
                            <span asp-validation-for="Input.Password" class="text-danger validation-error"></span>
                        </div>

                        <div class="form-floating">
                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="подтвердите пароль" />
                            <label asp-for="Input.ConfirmPassword">Подтвердите пароль</label>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger validation-error"></span>
                        </div>

                        <div class="mt-3 mb-3">
                            <div class="form-text">
                                <i class="bi bi-info-circle me-1"></i> Пароль должен содержать минимум 6 символов, включая заглавные буквы и цифры.
                            </div>
                        </div>

                        <button id="registerSubmit" type="submit" class="w-100 btn btn-auth btn-primary-gradient btn-lg">
                            <i class="bi bi-check-circle btn-icon"></i> Зарегистрироваться
                        </button>

                        <div class="text-center mt-4">
                            <p class="mb-0">
                                Уже есть аккаунт?
                                <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" class="auth-link">
                                    Войти в систему
                                </a>
                            </p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/auth-script.js"></script>
}