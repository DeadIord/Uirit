@model IEnumerable<WebSystemTwo.Models.ApplicationModel>

@{
    ViewData["Title"] = "Заявления";
}

<div class="container">
    <h2 class="text-center mb-4">Заявления</h2>

    <table class="table table-bordered">
        <thead class="thead-light">
            <tr>
                <th>Наименование</th>
                <th>Отправитель</th>
                <th>Дата</th>
                <th>Номер заявления</th>
                <th>Просмотр</th>
                <th>Рассмотреть</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>Отзыв о работе ресурса</td>
                        <td>@item.User</td>
                        <td>@item.Created.ToString("dd.MM.yyyy")</td>
                        <td>@item.ServiceNumber</td>
                        <td class="text-center">
                            <button type="button" class="btn btn-sm btn-link" onclick="toggleDetails('@item.Id')">Свернуть</button>
                        </td>
                        <td class="text-center">
                            @if (item.Status.StatusName == "На рассмотрении")
                            {
                                <span class="badge badge-warning">На рассмотрении</span>
                            }
                            else
                            {
                                <a href="@Url.Action("Review", "Home", new { id = item.ServiceNumber })" class="btn btn-warning">Рассмотреть</a>
                            }
                        </td>
                    </tr>
                    <tr id="details-@item.Id">
                        <td colspan="6" class="bg-light">
                            <p>@item.Body</p>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

<script>
    function toggleDetails(id) {
        var detailsRow = document.getElementById('details-' + id);
        if (detailsRow.style.display === 'none') {
            detailsRow.style.display = '';
            event.target.textContent = 'Свернуть';
        } else {
            detailsRow.style.display = 'none';
            event.target.textContent = 'Просмотр';
        }
    }

    // Initially hide all detail rows
    document.addEventListener('DOMContentLoaded', function() {
        var detailsRows = document.querySelectorAll('[id^="details-"]');
        detailsRows.forEach(function(row) {
            row.style.display = 'none';
        });
    });
</script>